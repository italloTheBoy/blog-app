<header class="navbar">
  <h1 class="nav-item">Registrar-se</h1>
  <a href="/" role="button" class="btn btn-primary nav-item">Voltar</a>
</header>
<hr>

<form action="/user/signup/post" method="post">
  <fieldset>
    <label for="name" class="form-label">Nome</label>
      <input type="text" name="name" class="form-control" placeholder="Insira seu nome" required>

    <label for="email" class="form-label mt-3">Email</label>
      <input type="text" name="email" class="form-control" placeholder="Insira seu email" required>

    <label for="password" class="form-label mt-3">Senha</label>
      <input type="text" name="password" class="form-control" placeholder="Insira sua senha" min="6" required>

    <label for="confirm" class="form-label mt-3">Confirme sua senha</label>
      <input type="text" name="confirm" class="form-control mb-4" placeholder="Confirme sua senha" min="6" required>
    
    {{#each err}}
      <p class="alert alert-danger">{{msg}}</p>
    {{/each}}
    
    <hr>
    <button type="submit" class="btn btn-success mt-1">Criar</button>
  </fieldset>
</form>